{# The Login page #}
{% extends 'base_onboarding.html.jinja' %}
{% block content %}
  <div class="auth-form">
    <h2>Log in to check your picks</h2>

    <form method="post">
      {{ form.hidden_tag() }}

      {% for field in form if field.widget.input_type != 'hidden' %}
        {{ field.label }}
        {{ field(class="form-control") }}
        {% for error in field.errors %}
          <span class="text-error">{{ error }}</span>
        {% endfor %}
      {% endfor %}

      <p class="button-row">
        <button>LOG &nbsp; in</button>
      </p>
      <p class="auth-alt">New around here?  <a id="signup-link" href="{{ url_for('game.picksheet') }}">Play now</a>!</p>
    </form>
  </div>
{% endblock %}
